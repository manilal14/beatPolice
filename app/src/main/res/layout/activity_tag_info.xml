<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TagsRelated.TagInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/image_not_available"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/page_left_margin"
            android:layout_marginTop="@dimen/margin_between_views"
            android:layout_marginRight="@dimen/page_right_margin"
            android:orientation="vertical">

            <TextView
                style="@style/text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />

            <TextView
                android:id="@+id/title"
                style="@style/text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />

            <View style="@style/view"/>

            <TextView
                android:layout_marginTop="8dp"
                style="@style/text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location" />


            <TextView
                android:id="@+id/location"
                style="@style/text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12345678910" />

            <View style="@style/view"/>


            <TextView
                android:layout_marginTop="8dp"
                style="@style/text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description" />

            <TextView
                android:id="@+id/des"
                style="@style/text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description" />

            <View style="@style/view"/>


        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/image_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"/>







</FrameLayout>