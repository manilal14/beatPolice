<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/page_left_margin"
        android:layout_marginTop="@dimen/margin_top2"
        android:layout_marginRight="@dimen/page_right_margin"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/issue_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinner_width"
            android:background="@null" />

        <LinearLayout
            android:id="@+id/take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_views"
            android:layout_marginBottom="@dimen/margin_between_views">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Take picture (optional)"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/camera" />
        </LinearLayout>

        <EditText
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_area_height"
            android:layout_marginTop="@dimen/margin_between_views"
            android:background="@drawable/rectangular_background"
            android:gravity="start"
            android:hint="Small Description..."
            android:padding="8dp"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_top_margin"
            android:layout_marginBottom="@dimen/page_bottom_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                style="@style/button_1"/>

            <TextView
                android:id="@+id/report"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:text="@string/report_issue"
                style="@style/button_2"/>




        </LinearLayout>



    </LinearLayout>








</FrameLayout>