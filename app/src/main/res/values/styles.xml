<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="text_1">
        <item name="android:layout_marginTop">@dimen/margin_between_views</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="edit_text_1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginLeft">-4dp</item>
    </style>

    <style name="text_2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:layout_marginTop">@dimen/margin_between_views</item>
    </style>

    <style name="button_style_1">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="button_style_2">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/background4</item>
    </style>

    <style name="button_1">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="button_2">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="booking_time">
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="booking_order">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="right_to_right">
        <item name="android:windowEnterAnimation">@anim/enter_from_right</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="fadein_fadeout">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="up_down">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:fontFamily">@font/gotham_book_regular</item>
    </style>


</resources>
